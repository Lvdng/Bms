<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.mapper.RoleMenuMapper">

    <insert id="insertById">
        insert into role_menu(r_id, m_id)
        values (#{r_id}, #{m_id})
    </insert>

    <update id="updateById">
        update role_menu
        <trim prefix="set" suffixOverrides=",">
            <if test="m_id != ''">
                m_id=#{m_id},
            </if>
        </trim>
        <where>
            r_id = #{r_id}
        </where>
    </update>

    <delete id="deleteById">
        delete
        from role_menu
        where r_id = #{r_id}
          and m_id = #{m_id}
    </delete>

    <delete id="deleteAll">
        delete
        from role_menu
        where r_id = #{r_id}
    </delete>

    <select id="selectAll" resultType="com.example.springboot.entity.RoleMenu">
        select *
        from role_menu;
    </select>

    <select id="selectById" resultType="com.example.springboot.entity.RoleMenu">
        select *
        from role_menu
        where r_id = #{r_id}
    </select>

    <select id="selectByIdMenu" resultType="com.example.springboot.entity.RoleMenu">
        select *
        from role_menu
        where r_id = #{r_id}
          and m_id = #{m_id}
    </select>


</mapper>
