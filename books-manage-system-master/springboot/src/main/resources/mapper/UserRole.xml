<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.mapper.UserRoleMapper">

    <insert id="insertById">
        insert into user_role(u_id, r_id)
        values (#{u_id}, #{r_id})
    </insert>

    <update id="updateById">
        update user_role
        <trim prefix="set" suffixOverrides=",">
            <if test="r_id != ''">
                r_id=#{r_id},
            </if>
        </trim>
        <where>
            u_id = #{u_id}
        </where>
    </update>

    <delete id="deleteById">
        delete
        from user_role
        where u_id =
              #{u_id}
    </delete>

    <select id="selectAll" resultType="com.example.springboot.entity.UserRole">
        select *
        from user_role;
    </select>

    <select id="selectById" resultType="com.example.springboot.entity.UserRole">
        select *
        from user_role
        where u_id = #{u_id}
    </select>

    <select id="selectByRid" resultType="com.example.springboot.entity.UserRole">
        select *
        from user_role
        where r_id = #{r_id}
    </select>


</mapper>
