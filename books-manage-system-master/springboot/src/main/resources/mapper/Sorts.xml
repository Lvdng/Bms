<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.mapper.SortsMapper">

    <insert id="insertById">
        insert into sorts(s_id, s_icon, s_sort, s_code, s_status)
        values (#{s_id}, #{s_icon}, #{s_sort}, #{s_code}, #{s_status})
    </insert>

    <update id="updateById">
        update sorts
        <trim prefix="set" suffixOverrides=",">
            <if test="s_icon != ''">
                s_icon=#{s_icon},
            </if>
            <if test="s_sort != ''">
                s_sort=#{s_sort},
            </if>
            <if test="s_code != ''">
                s_code=#{s_code},
            </if>
            <if test="s_status != null">
                s_status=#{s_status},
            </if>
        </trim>
        <where>
            s_id = #{s_id}
        </where>
    </update>

    <delete id="deleteById">
        delete
        from sorts
        where s_id =
              #{s_id}
    </delete>

    <select id="selectAll" resultType="com.example.springboot.entity.Sorts">
        select *
        from sorts;
    </select>

    <select id="selectById" resultType="com.example.springboot.entity.Sorts">
        select *
        from sorts
        where s_id = #{s_id}
    </select>

</mapper>
